@model StreamWorld.Models.Contact

@{
    ViewData["Title"] = "Mensagem";
}

<h2>Mensagem Recebida</h2>
<hr />

<p><strong>Nome:</strong> @Model.name</p>
<p><strong>E-mail:</strong> @Model.email</p>
<p><strong>Assunto:</strong> @Model.subject</p>
<p><strong>Enviado em:</strong> @Model.submissionDate.ToString("dd/MM/yyyy HH:mm")</p>

<h4 class="mt-4">Mensagem</h4>
<p>@Model.message</p>

<a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
